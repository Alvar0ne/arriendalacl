  <br>





  <div class="page">



    <h1 class="titulo-ok"><%= @publication.titulo %></h1>
    <div class="container float-ok">
       <div class="row">
    
        
    </div>
</div>

    <div class="sp-loading"><img src="images/sp-loading.gif" alt=""><br>CARGANDO IMAGENES</div>
    <div class="sp-wrap">

      <a ><%= image_tag @publication.publication_attachments.first. avatar_url %></a>
      <% unless @publication.publication_attachments.second.nil? %>
      <a ><%= image_tag @publication.publication_attachments.second. avatar_url %></a>
      <%end%>
       <% unless @publication.publication_attachments.third.nil? %>
      <a ><%= image_tag @publication.publication_attachments.third. avatar_url %></a>
      <%end%>
      <% unless @publication.publication_attachments.fourth.nil? %>
      <a ><%= image_tag @publication.publication_attachments.fourth. avatar_url %></a>
      <%end%>
       <% unless @publication.publication_attachments.fifth.nil? %>
      <a ><%= image_tag @publication.publication_attachments.fifth. avatar_url %></a>
      <%end%>
      
    </div>

    <h4 class="price">Precio: <span> <%= number_to_currency(@publication.precio,precision: 0,separator:".",delimiter: ".") %></span></h4>
    <br>
    <ul>
      <li><%= @publication.region.nombre %></li>
      <li><%= @publication.comuna.nombre %></li>
      <br>
      <h5 class="colors"><strong>Tipo:</strong>
              <%= @publication.tipo %>
        
            </h5>

            <h5 class="colors"><strong>Superficie:</strong>
              <%= @publication.superficie %>
        
            </h5>


            <h5 class="colors"><strong>Dormitorios:</strong>
              <%= @publication.dormitorio %>
        
            </h5>

              <h5 class="colors"><strong>Baños:</strong>
              <%= @publication.baño %>
        
            </h5>

              </h5>

              <h5 class="colors"><strong>Estacionamientos:</strong>
              <%= @publication.estacionamiento %>
        
            </h5>
            <h5><strong> Descripcion:</strong> </h5>
      <p class="product-description"><%= @publication.descripcion %></p>
      
    </ul>

    
</div>

