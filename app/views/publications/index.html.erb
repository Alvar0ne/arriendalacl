<% provide(:page_title, 'Buscar Aviso') %>
</br>

<!DOCTYPE html>
<html>
  <head>


    <style>


    body
        {
            background: url('http://hdwallpaperbackgrounds.net/wp-content/uploads/2016/07/white-background-9.jpg') fixed;
            background-size: cover;
            padding: 15px;
            margin: 0;
        }  


    /**** BASE ****/


/**** LAYOUT ****/

.sales {
    background: #ffffff none repeat scroll 0 0;
    border: 7px solid #d4d9e3;
    display: inline-block;
    padding-top: 15px;
    padding-left: 15px;
    padding-bottom: 1px;
    width: 100%;
    opacity:0.8;
}

a{
    color: #131A46;


}

.negrit{
  font-weight:black;
  color:black !important;
  opacity:0.8;

}

.statico{
  position: fixed;
 
  
}

.rojito{
  font-weight:black;
  color: red;
  opacity:0.5;
  font-size: 30px;
  font-family: "Arial Hebrew";
}


.sizefo{
    font-size: 25px !important;
}

.regionst{

    font-size: 10px;

}

.comunast{
    font-size: 20px;
   font-family: "Arial Rounded MT Bold"
}

.caract{
    font-size: 15px;
    font-family: "Arial Rounded MT Bold"

}

.cartel{
    width: 100px;
    float: right;
    opacity:0.6;
}

.form

    </style>

    </head>


    <body>








    <div class="col-md-3">


    


<%= search_form_for @q do |f| %>

        

            
         



          

          


<div class="container">
  <div class="row">
    <div class="col-lg-4 col-md-5 col-md-offset-3 col-lg-offset-0">
      <div class="well">
      <h3 align="center">Buscador</h3>
        <form class="form-horizontal">


           <div class="form-group">
            <%= f.label :titulo_cont , "Palabra clave",class: 'control-label' %>
            <div class="input-group">
            <%= f.search_field :titulo_cont ,class: 'form-control'%>
            
            </div>
          </div>


          <div class="form-group">

          


                         <%= f.label :motivo_eq , "¿Que Buscas?",class: 'control-label' %>

                         <div class="row">

          

                         <div class="col-md-5">

            
                        <%= f.select(:motivo_eq, options_for_select([['', ''],['Comprar', '1'], ['Arrendar', '2']]),{} , {class: 'form-control'} ) %>

                        </div>

                </div>




          </div>

          <div class="form-group">

          
              <%= f.hidden_field :region_id_eq , :value => @region_recibida %>

                         

                         <div class="row">

          

                         <div class="col-md-5">

            
                        

                        </div>

                </div>

      </div>

      <div class="form-group">

          


                         <%= f.label :comuna_id_eq , "Comuna",class: 'control-label' %>

                         <div class="row">

          

                         <div class="col-md-5">



                         <%= f.collection_select :comuna_id_eq, Comuna.order(:nombre).where(:region_id => @region_recibida), :id, :nombre,{include_blank: true}, {:class=>'form-control'}%>


                        </div>

                </div>




          </div>

          <div class="form-group">
            <%= f.label :tipo_cont , "Tipo",class: 'control-label' %>

            <div class="row">


                         <div class="col-md-5">
           <%= f.select(:tipo_cont, options_for_select([['Casa', 'Casa'], ['Departamento', 'Departamento'],['Parcela', 'Parcela']]),{} , {class: 'form-control'}) %>
          </div>
          </div>
          </div>

           
          <div class="form-group">

          <%= f.label :dormitorio_gteq , "Dormitorios",class: 'control-label' %>

          <div class="row">

          

                         <div class="col-md-5">

            
                         <%= f.select(:dormitorio_gteq, options_for_select([['Min', ''],['1', '1'], ['2', '2'],['3', '3'],['4 o mas', '4']]),{} , {class: 'form-control'} ) %>

                        </div>


                         <div class="col-md-5">
                      

                         <%= f.select(:dormitorio_lteq, options_for_select([['Max', ''],['1', '1'], ['2', '2'],['3', '3'],['4 o mas', '4']]),{} , {class: 'form-control'} ) %>

                         </div>
                       
</div>


          </div>

          <div class="form-group">

                         <%= f.label :baños_gteq , "Baños",class: 'control-label' %>
                         <div class="row">

                         <div class="col-md-5">
            
                        <%= f.select(:baño_gteq, options_for_select([['Min', ''],['1 baño', '1'], ['2 baños', '2'],['3 baños', '3'],['4 o mas baños', '4']]),{} , {class: 'form-control'} ) %>
                        </div>
                        <div class="col-md-5">
    
                        <%= f.select(:baño_lteq, options_for_select([['Max', ''],['1 baño', '1'], ['2 baños', '2'],['3 baños', '3'],['4 o mas baños', '4']]),{} , {class: 'form-control'} ) %>

                        </div>
                        </div>






          </div>

           <div class="form-group">

                         <%= f.label :estacionamiento_gteq , "Estacionamientos",class: 'control-label' %>

                         <div class="row">

                         <div class="col-md-5">
            
                      <%= f.select(:estacionamiento_gteq, options_for_select([['Min', ''],['1 estacionamiento', '1'], ['2 estacionamientos', '2'],['3 o mas estacionamientos', '3'],['No tiene', '0']]),{} , {class: 'form-control'} ) %>
                      </div>

                      <div class="col-md-5">

                       <%= f.select(:estacionamiento_lteq, options_for_select([['Max', ''],['1', '1'], ['2', '2'],['3 o mas', '3'],['No tiene', '0']]),{} , {class: 'form-control'} ) %>

                       </div>

                       </div>







          </div>
          



          


          <div class="form-group">
             <%= f.label :precio_gteq , "Precio",class: 'control-label' %>

             <div class="row">

                         <div class="col-md-5">
            
              
               <div class="input-group">
               <div class="input-group-addon" id="basic-addon2">$</div>
            <%= f.search_field :precio_gteq ,class: 'form-control'%>
            
            </div>

            </div>

            <div class="col-md-5">



            
               <div class="input-group">
               <div class="input-group-addon" id="basic-addon2">$</div>
            <%= f.search_field :precio_lteq ,class: 'form-control'%>
            
            </div>

            </div>

            </div>
              
            



          </div>

          

         

          <%= f.button ' Buscar' ,name:"region_id", value: @region_recibida , class: 'btn btn-danger glyphicon glyphicon-search' %>
          


        </form>
      </div>
    </div>
  </div>
</div>


</div>



<%end%>







<div class="col-md-9">



<% @publications.each do |publication| %>

<div class="row">
                        <div class="col-md-10">




                            <div class="sales border-0"">
                             <div class="col-md-2">

                             </br>


                            

                             </br>
                             
                           

                             <div class="comunast"><%= publication.comuna.nombre %></div>

                             </br>
                             
                            
                            
                            <div class="regionst"><%= publication.region.nombre %></div>

                             </div>


                              <div class="col-md-3">

                                <% unless publication.publication_attachments.first.nil? %>
       
                               <td><%= image_tag publication.publication_attachments.first.avatar_url(:normal) , class:"img-thumbnail"  %></td>
                                <%end%>


                            <%= button_to 'Eliminar', publication, method: :delete%>

                             

                             </div>
                              
                               

                            <div class="col-md-7">


                             <div class="sizefo"><a href=""> <%= link_to publication.titulo, publication %> </a></div>

                            <div class="rojito"> <%= number_to_currency(publication.precio,precision: 0,separator:".",delimiter: ".") %> </div>
                            </br>
                         

                            <div class="caract"><i>Dormitorios : </i> <strong><%= publication.dormitorio %> </strong>
                            &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;<i>Superficie :</i> <%= publication.superficie %></div>

                            <%if (publication.motivo==1) %>

                            <%= image_tag("se-vende.png",class:"cartel" )%>


                            <% else %>

                            <%= image_tag("searrienda.png",class:"cartel" )%>

                            <% end %>



                           

                             <div class="caract"><i>Baños :</i> <%= publication.baño %></div>
                             


                            
                       

                         

                            </div>


                        
                           

                            
                            
                        


                                  

                                   

                               


                                    
                                
                            </div>
                        </div>
                        


                            
                      </div>

                      </br>
                            

                      <%end%>











            
              







</div>


<%= will_paginate @publications %>



</body>


</html>



 




 


