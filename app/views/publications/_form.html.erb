


<!DOCTYPE html>
<html lang="en">
  <head>

    <style>

    body
        {
            background: url('http://hdwallpaperbackgrounds.net/wp-content/uploads/2016/07/white-background-9.jpg') fixed;
            background-size: cover;
            padding: 15px;
            margin: 0;
        }  

        </style> 


    </head>

    <body>







       

       </br>
   </br>




 

             
<%= form_for(@publication) do |f| %>
  <% if @publication.errors.any? %>
    <div id="error_explanation">
      <% if publication.errors.count == 1 %>
      <h2> 1 Error no permite que la publicacion se realice:</h2> 


      <%else%>

      <h2><%=publication.errors.count%> errores no permiten que la publicacion se realice:</h2>

      <%end%>

      <ul>
      <% @publication.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
       

<div class="col-md-6">

<div class="well well-sm">

<div class="container">

    
  
  
  
      
                <!-- Form Name -->
                <div class="col-md-7">

                <legend>Nueva Publicacion</legend>
              </div>


             

            <div class="row">
                
                <div class="col-xs-6">


                    <label >Titulo</label>
        
                        <%= f.text_field :titulo ,class: 'form-control' , placeholder: 'Titulo'  %>
                    
                </div>

           </div>

           </br>

            
            <%= f.fields_for :publication_attachments do |p| %>
            <div class="field">
            <%= p.label :avatar , "Imagenes"%><br>
            <%= p.file_field :avatar, :multiple => true, name: "publication_attachments[avatar][]" ,:class => "btn btn-primary"%>
        </div>

         <% end %>

            </br>
            
             
              
             <%= f.hidden_field :motivo , :value => @motivo_recibido %>

           
           



              <div class="row">

              
                <div class="col-md-3">
                       <%= f.label :region_id, "Region" %><br />
                       
          
                   <%= f.collection_select :region_id, Region.order(:nombre), :id, :nombre,{include_blank: true}, {:class=>'form-control'}%>
                
                </div>


           

           

          


           
                <div class="col-xs-3">
                    <%= f.label :comuna_id, "Comuna" %><br />
          
           <%= f.grouped_collection_select :comuna_id, Region.order(:nombre), :comunas , :nombre ,:id, :nombre,{include_blank: true}, {:class=>'form-control'} %>

                   
                </div>
           
               
         </div>

         </br>


                     
             

        
              <div class="row">

              
                <div class="col-xs-2">
               
            
                    <label>Tipo &nbsp;</label>
                   
                        <%= f.select(:tipo, options_for_select([['Casa', 'Casa'], ['Departamento', 'Departamento'],['Parcela', 'Parcela']]),{},class: 'form-control') %>
                    </div>

                      <div class="col-xs-1">
                     </div>
              
                </div>




               </br>
             
              

             <div class="row">

                 <div class="col-xs-2">



                    <label> Precio  </label>


                   

                        <%= f.text_field :precio ,class: 'form-control' , placeholder: 'Precio'  %> 
                    </div>

                    

              
                <div class="col-xs-2">
                    <label >Superficie</label>
                   
                        <%= f.text_field :superficie ,class: 'form-control' , placeholder: 'Superficie' + ' Mt2'%> 
                </div>
              </div>





                   </br>
             

              
              <div class="row">
                <div class="col-xs-2">
                    <label >Dormitorios</label>
             
                         <%= f.select(:dormitorio, options_for_select([['1 dormitorio', '1'], ['2 dormitorios', '2'],['3 dormitorios', '3'],['4 o mas dormitorios', '4']]),{},class: 'form-control') %>
                    </div>
                
           
            

              
                <div class="col-xs-2">
                    <label>Baños</label>
                    
                         <%= f.select(:baño, options_for_select([['1 baño', '1 baño'], ['2 baños', '2'],['3 baños', '3'],['4 o mas baños', '4']]) ,{},class: 'form-control') %>
                  
                </div>

            </div>
               

                      </br>
          

               <div class="row">

              
                <div class="col-xs-3">
                    <label>Estacionamientos</label>

                  
                        <%= f.select(:estacionamiento, options_for_select([['1 estacionamiento', '1'], ['2 estacionamientos', '2'],['3 o mas estacionamientos', '3'],['No tiene', '0']]),{},class: 'form-control') %>
                    
                </div>
            </div>



                       </br>
              </br>
              

              <div class="row">

                <div class="form-group">
                    <label class="col-md-1 control-label" for="email">Descripcion</label>
                    <div class="col-md-6">
                        <%= f.text_area :descripcion ,class: 'form-control' , placeholder: 'Descripcion'  %> 
                    </div>
                </div>
             
                    </br>

                </div>
              </br>
              </br>
              </br>

                   <%if user_signed_in? %>

                 <%= f.hidden_field :nombre  , :value => current_user.nombre %>

                  <%= f.hidden_field :fono  , :value => current_user.fono %>
                 <%end%>

              <%unless user_signed_in? %>

           <legend>Datos Contacto</legend>
            <div class="row">

              <div class="col-xs-4">


                    <label >Nombre</label>
        
                        <%= f.text_field :nombre ,class: 'form-control' , placeholder: 'Nombre'  %>
                    
                </div>


                </div>



                 <div class="row">

                

                <div class="col-xs-4">


                    <label >Telefono</label>
        
                        <%= f.text_field :fono ,class: 'form-control' , placeholder: 'Telefono'  %>
                    
                </div>

                <div class="form-group">
                   
                    <div class="col-md-4">
                        <%= f.submit 'Crear Aviso', class: 'btn btn-primary pull-right col-md-6' %>
                    </div>
                </div>

                </div>


                <%end%>

               

           

                          </br>
              </br>
              </br>
              
        
        
       
  </div>
</div>
</div>

</div>


<% end %>



                 <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/js/bootstrap.min.js"></script>
                 <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.7.5/js/bootstrap-select.min.js"></script>
          <script type="text/javascript">
               $(document).ready(function() {
               $('.selectpicker').selectpicker();
              });
          </script>



</body>


</html>



