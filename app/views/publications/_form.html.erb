<%= form_for(@publication) do |f| %>
  <% if @publication.errors.any? %>
    <div id="error_explanation">
      <% if @publication.errors.count == 1 %>
      <h2> 1 Error no permite que la publicacion se realice:</h2> 


      <%else%>

      <h2><%=@publication.errors.count%> errores no permiten que la publicacion se realice:</h2>

      <%end%>

      <ul>
      <% @publication.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


       

<div class="col-md-6 col-lg-5">

<div class="well well-sm">

<div class="container">

    
  
  <div class="row"
  
      
                <!-- Form Name -->
                <div class="col-xs-6">

                <legend>Nueva Publicacion</legend>
              </div>

              </div>


             

            <div class="row">
                
                <div class="col-xs-10 col-sm-4 col-md-4">


                    <label >Titulo</label>
        
                        <%= f.text_field :titulo ,class: 'form-control' , maxlength: 30, placeholder: 'Titulo'  %>
                    
                </div>

           </div>

           </br>

           <div class="row">
                
                <div class="col-xs-6 ">

            
            <%= f.fields_for :publication_attachments do |p| %>
            <div class="field">
            <%= p.label :avatar , "Imagenes"%><br>
            <%= p.file_field :avatar, :multiple => true, name: "publication_attachments[avatar][]" ,:class => "btn btn-primary"%>
        </div>

         <% end %>

         </div>
         </div>

            </br>
            
             
              
             <%= f.hidden_field :motivo , :value => @motivo_recibido %>

           
           



              <div class="row">

              
                <div class="col-xs-12 col-sm-4">
                       <%= f.label :region_id, "Region" %><br />
                       
          
                   <%= f.collection_select :region_id, Region.order(:nombre), :id, :nombre,{include_blank: true}, {:class=>'form-control'}%>
                
                </div>


           
             </div>

             <div class="row">
           

          


           
                <div class="col-xs-12 col-sm-4">
                    <%= f.label :comuna_id, "Comuna" %><br />
          
           <%= f.grouped_collection_select :comuna_id, Region.order(:nombre), :comunas , :nombre ,:id, :nombre,{include_blank: true}, {:class=>'form-control'} %>

                   
                </div>
           
               
         </div>

         </br>


                     
             

        
              <div class="row">

              
                <div class="col-xs-4 col-sm-2">
               
            
                    <label>Tipo &nbsp;</label>
                   
                        <%= f.select(:tipo, options_for_select([['Casa', 'Casa'], ['Departamento', 'Departamento'],['Parcela', 'Parcela']]),{},class: 'form-control') %>
                    </div>

                       <div class="col-xs-4 col-sm-2">
                    <label >Superficie</label>
                   
                        <%= f.text_field :superficie ,class: 'form-control' , placeholder: 'Superficie' + ' Mt2'%> 
                </div>
              
                </div>




               </br>
             
              


               <% if @motivo_recibido=="1" %>

                
                

             


                    <label >Precio</label>
                    <div class="row">
                    
                    <div class="col-xs-3 col-sm-2 col-md-1 padingform">
                    <%= f.text_field :precio ,class: 'form-control' , maxlength: 3 ,placeholder: 'Precio'  %>
                    </div>
                    <div class="col-xs-2 col-md-2 centradito">
                    
                    <i>Millones</i>
                    
                    </div>

                        </div>
                    
           

           
     <%end%>
            


                    

                  

                        <% if @motivo_recibido=="2" %>
                   

                        
                


                    <label >Precio</label>
                    <div class="row">
                    
                    <div class="col-xs-4 col-sm-2 col-md-2 padingform">
                    <%= f.text_field :precio ,class: 'form-control' , maxlength: 8 ,placeholder: 'Precio'  %>
                    </div>
                    <div class="col-md-2 centradito">
                    
                    <i>Mensual</i>
                    
                    </div>

                        </div>
                    
                

                        <%end%>


                    

                    

              
               
             




                   </br>
             

              
              <div class="row">
                <div class="col-xs-6 col-sm-2">
                    <label >Dormitorios</label>
             
                         <%= f.select(:dormitorio, options_for_select([['1 dormitorio', '1'], ['2 dormitorios', '2'],['3 dormitorios', '3'],['4 o mas dormitorios', '4']]),{},class: 'form-control') %>
                    </div>
                
           
            

              
                <div class="col-xs-6 col-sm-2">
                    <label>Baños</label>
                    
                         <%= f.select(:baño, options_for_select([['1 baño', '1 baño'], ['2 baños', '2'],['3 baños', '3'],['4 o mas baños', '4']]) ,{},class: 'form-control') %>
                  
                </div>

            </div>
               

                      </br>
          

               <div class="row">

              
                <div class="col-xs-8 col-sm-4">
                    <label>Estacionamientos</label>

                  
                        <%= f.select(:estacionamiento, options_for_select([['1 estacionamiento', '1'], ['2 estacionamientos', '2'],['3 o mas estacionamientos', '3'],['No tiene', '0']]),{},class: 'form-control',:selected => ['3 o mas estacionamientos', '3']) %>
                    
                </div>
            </div>



                       </br>
              </br>
              

              <div class="row">

                <div class="col-xs-12 col-md-4">

              
                    <label>Descripcion</label>
                  
                        <%= f.text_area :descripcion ,class: 'form-control' , maxlength: 100, placeholder: 'Descripcion'  %> 
                   
                </div>

                </div>
             
                    

                </div>
              
              </br>
              </br>

                   <%if user_signed_in? %>

                 <%= f.hidden_field :nombre  , :value => current_user.nombre %>

                  <%= f.hidden_field :fono  , :value => current_user.fono %>

                  <div class="form-group">
                   
                    <div class="col-md-4">
                        <%= f.submit 'Crear Aviso', class: 'btn btn-primary pull-right col-md-6' %>
                    </div>
                </div>
                 <%end%>



               

           

                          </br>
            
        
        
       
  </div>
</div>
</div>

</div>


<div class="col-md-4">




  
   <%unless user_signed_in? %>
   <div class="well well-sm">

        <div class="container">

           <legend>Datos Contacto</legend>
            <div class="row">

              <div class="col-xs-8 col-sm-4 col-md-3">


                    <label >Nombre</label>
        
                        <%= f.text_field :nombre ,class: 'form-control' ,maxlength: 15, placeholder: 'Nombre'  %>
                    
                </div>


                </div>



                 <div class="row">

                

                <div class="col-xs-8 col-sm-4 col-md-3">


                    <label >Telefono ( 8 digitos)</label>
                    <div class="row">
                    <div class="col-md-1">
                    <div class="centradito">
                    +569
                    </div>
                    </div>
                    <div class="col-md-10">
                    <div class="padingform"><%= f.text_field :fono , maxlength: 8,class: 'form-control' , placeholder: 'Telefono'  %></div>
                    </div>

                        </div>
                    
                </div>

                

                </div>

                </br>


                <div class="row">

                <div class="form-group">
                   
                    <div class="col-xs-8 col-sm-4 col-md-8">
                        <%= f.submit 'Crear Aviso', class: 'btn btn-primary col-md-4' %>
                    </div>
                </div>

                </div>


                <%end%>

                </div>

  </div>
  </div>


<% end %>



                 <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/js/bootstrap.min.js"></script>
                 <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.7.5/js/bootstrap-select.min.js"></script>
          <script type="text/javascript">
               $(document).ready(function() {
               $('.selectpicker').selectpicker();
              });
          </script>



</body>


</html>



